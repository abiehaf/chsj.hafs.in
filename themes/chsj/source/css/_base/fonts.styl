font-base-url = 'http://s.hafs.in/fonts/'
_font-face(family, local1, local2, file, weight = normal, style = normal)
  @font-face
    font-family family
    font-weight weight
    font-style style
    src url(font-base-url + file + '.eot')
    src local(local1), local(local2),
        url(font-base-url + file + '.eot?#iefix') format('embedded-opentype'),
        url(font-base-url + file + '.woff') format('woff'),
        url(font-base-url + file + '.ttf') format('truetype');

_font-face("Ubuntu Mono", "Ubuntu Mono", "UbuntuMono", "ubuntumono", normal, normal)
_font-face("Ubuntu Mono", "Ubuntu Mono Bold", "UbuntuMono-Bold", "ubuntumono-bold", bold, normal)

_font-face("Open Sans", "Open Sans", "OpenSans", "opensans", normal, normal)
_font-face("Open Sans", "Open Sans Bold", "OpenSans-Bold", "opensans-bold", bold, normal)
